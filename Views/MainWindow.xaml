<Window x:Class="QualificationCoursesExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QualificationCoursesExam"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Логин:"  Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" x:FieldModifier="public" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" x:FieldModifier="public" Margin="0,0,0,20"/>

            <Button Content="Войти" Click="Login_Click" Height="30"/>

            <TextBlock x:Name="txtError" x:FieldModifier="public" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
