<Window x:Class="QualificationCoursesExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QualificationCoursesExam"
        mc:Ignorable="d"
        Title="Авторизация"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="40"
                Background="White"
                BorderBrush="CornflowerBlue"
                BorderThickness="4"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Авторизация"
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"
                           FontSize="24"
                           FontWeight="Medium"/>

                <TextBlock Text="Логин:"
                           Margin="0,0,0,5"
                           FontSize="14"/>
                <TextBox x:Name="txtLogin"
                         x:FieldModifier="public"
                         Margin="0,0,0,20"
                         Height="30"
                         Padding="5"/>

                <TextBlock Text="Пароль:"
                           Margin="0,0,0,5"
                           FontSize="14"/>
                <PasswordBox x:Name="txtPassword"
                             x:FieldModifier="public"
                             Margin="0,0,0,30"
                             Height="30"
                             Padding="5"/>

                <Button Content="Войти"
                        Click="Login_Click"
                        Margin="0,0,0,10"
                        Height="40"
                        Padding="15,8"
                        FontSize="16"
                        FontWeight="Medium"
                        Background="CornflowerBlue"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Center">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                    </Button.Effect>
                </Button>

                <Button Content="Выход" Click="Exit_Click" Margin="0,20,0,0" Height="40" Padding="15,8" FontSize="16" FontWeight="Medium" Background="CornflowerBlue" Foreground="White" BorderThickness="0" HorizontalAlignment="Center">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                    </Button.Effect>
                </Button>

                <TextBlock x:Name="txtError"
                           x:FieldModifier="public"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           Foreground="#FFD32F2F"
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
